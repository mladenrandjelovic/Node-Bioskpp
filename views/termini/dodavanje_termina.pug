extends ../layout
block content
    .container
        .row.justify-content-center.my-5
            img(src='/slike/logo.png' alt='Logo' width="20%" height="20%")
        .row.justify-content-center
            .col-xs-12.col-md-6
                h1(align='center')=film[0].naziv
                form(action='/termini/dodaj/'+film[0].id method='POST')
                    .form-group
                        label(for='vreme_prikazivanja') Vreme prikazivanja
                        input#vreme_prikazivanja.form-control(type='datetime-local' name='vreme_prikazivanja')
                    .form-group
                        label(for='sala') Sala
                        select#sala_id.form-control(name='sala_id')
                            each sala in sale
                                option(value=sala.id)=sala.naziv
                    .form-group
                        label(for='vreme_prikazivanja') Cena karte
                        input#vreme_prikazivanja.form-control(type='number' name='cena_karte' min="0" required)
                           
                    .form-group
                        button.btn.btn-primary(type='submit') Dodaj termin


